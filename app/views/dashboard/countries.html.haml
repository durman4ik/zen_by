.row{style: 'padding-bottom: 15px;'}
  .col-md-6
    %h3 Управление странами
  .col-md-2.col-md-offset-4{style: 'padding-top: 25px;'}
    = link_to 'Новая страна', new_dashboard_country_path, class: 'btn btn-success'
.row
  .col-xs-12
    %section.panel
      %header.panel-heading
        Страны
      .panel-body.table-responsive
        %table.table.table-hover
          .col-md-12#countries_pagination{style: 'text-align:center;'}
            = paginate @countries
          %thead
            %tr
              %th #
              %th Страна
              %th Туров
              %th Отелей
              %th
            %tbody#countries_table
              = render 'dashboard/countries/index'