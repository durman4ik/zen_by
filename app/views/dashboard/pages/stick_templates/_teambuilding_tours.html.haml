- @this = SpecialTour.where(tour_type: 'Командообразование')
- @this.each_with_index do |tour, index|
  - if index == 0
    .contentArea.contentAreaC{style: 'padding:0;'}
      :css
        hr {
         border: none;
         background-color: #424242;
         height: 2px;
         width: 140%;
        }
      %hr/
  .contentArea.contentAreaD{style: 'padding: 0 !important; width:74%;'}
    %h3.module.margin-collapse.h2{style:'text-transform:uppercase;'}
      КОМАНДООБРАЗОВАНИЕ.
      = "#{tour.country}."
      = tour.name
    .module.divider-divider-variable.divider-variable{:style => 'height: 10px;'}
    .module.margin-collapse.h4.preamble
      %p
        %span{:style => 'color:#FFA500;font-size:18px;'}
          %strong
            Регион:
            = "#{tour.region}, #{tour.country.capitalize}"
    .module.divider-divider-variable.divider-variable{:style => 'height: 10px;'}
    .module.margin-collapse.divider-dotted.dotted
    %article.module.margin-collapse.text
      %p
        %span{:style => 'font-size:14px;'}
          %strong
            = 'Маршрут:'
            = tour.route
        %br/
        %br/
        %span{:style => 'font-size:14px;'}
          %strong
            Описание: 
            = tour.description
        %br/
        %br/

      - if tour.travel_tasks.present?
        %p
          %span{:style => 'color: rgb(0, 0, 0); font-size: 14px;'}
            %strong В ПРОГРАММЕ:
          - tour.travel_tasks.each do |task|
            %p
              %strong{:style => 'color: rgb(0, 0, 0); font-size: 14px; line-height: 1.6;'}
                = task.title
            - if task.task_items.present?
              %ul
                - task.task_items.each do |item|
                  %li
                    %span{:style => 'color:#000000;'}
                      = item.title
  .contentArea.contentAreaB{style: 'padding:0;'}
    .module.divider-divider-variable.divider-variable{:style => 'height: 25px;'}
    = image_tag tour.image(:corporate), class: 'module margin-collapse image'
    .module.alignleft.text-left.box.callToAction{:style => 'background-color: #626262;'}
      %p{:style => 'text-align: center;'}
        %span{:style => 'line-height: 20.7999992370605px; text-align: -webkit-center; color: rgb(255, 255, 255);'} от 
        %span{:style => 'line-height: 20.7999992370605px; text-align: -webkit-center; color: rgb(255, 165, 0);'}
          = show_price(tour)
        %span{:style => 'line-height: 20.7999992370605px; text-align: -webkit-center; color: rgb(255, 255, 255);'}
          \/ 1 человек
          %br/
          %span{:style => 'line-height: 1.6;'}
          (для группы
          = tour.group_size
          чел)
          %br/
          %span{:style => 'line-height: 17.6000003814697px; font-size: 10px;'} ......................................................
          %br/
          %span{:style => 'font-size: 14px; line-height: 17.6000003814697px;'}  
          = tour.days
        %br{:style => 'line-height: 20.7999992370605px; text-align: -webkit-center;'}/
        %br{:style => 'line-height: 20.7999992370605px; text-align: -webkit-center;'}/
        %span{:style => 'line-height: 20.7999992370605px; text-align: -webkit-center; color: rgb(255, 255, 255);'}
          %span{:style => 'font-size: 14px;'} ПОДРОБНАЯ ПРОГРАММА,РАСЧЕТ НА ВАШИ ДАТЫ И КОЛИЧЕСТВО ПУТЕШЕСТВЕННИКОВ ПРЕДОСТАВЛЯЕТСЯ ПО ЗАПРОСУ
  .contentArea.contentAreaC{style: 'padding:0;'}
    :css
      hr {
       border: none;
       background-color:#424242;
       height: 2px;
       width: 100%;
      }
    - unless index + 1 == @this.size
      %hr/