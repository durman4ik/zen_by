.row{style: 'padding-bottom: 15px;'}
  .col-md-6
    %h3 Управление отзывами
  .col-md-2.col-md-offset-4{style: 'padding-top: 20px;'}
    = link_to 'Новый отзыв', new_dashboard_review_path, class: 'btn btn-success'

.row
  .col-md-12{style: 'min-height: 500px;'}
    %section.panel
      %header.panel-heading
        Все отзывы
      .panel-body.table-responsive
        %table.table.table-hover
          .col-md-12#orders_pagination{style: 'text-align:center;'}
            = paginate @reviews
          %thead
            %tr
              %th Создан
              %th Автор
              %th Email
              %th.text-center Город
              %th.text-center Статус
              %th Сообщение
              %th
          %tbody#reviews
            = render 'dashboard/reviews/reviews'



