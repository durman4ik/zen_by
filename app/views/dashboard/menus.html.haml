.row{style: 'padding-bottom: 15px;'}
  .col-md-6
    %h3 Управление меню
  .col-md-2.col-md-offset-4{style: 'padding-top: 20px;'}
    = link_to 'Новый пункт меню', new_dashboard_menu_item_path, class: 'btn btn-success'
.row
  .col-md-12{style: 'min-height: 500px;'}
    %section.panel
      %header.panel-heading
        Все пункты меню
      .panel-body.table-responsive
        %table.table.table-hover
          .col-md-12#orders_pagination{style: 'text-align:center;'}
            = paginate @menu_items
          %thead
            %tr
              %th #
              %th Имя
              %th
              %th Позиция
              %th Суб страниц
              %th
          %tbody#orders
            = render 'dashboard/menu_items/index'