.row{style: 'padding-bottom: 15px;'}
  .col-md-6
    %h3 Управление страницами
  .col-md-2.col-md-offset-4{style: 'padding-top: 25px;'}
    = link_to 'Новая страница', new_dashboard_page_path, class: 'btn btn-success'
.row
  .col-xs-12
    %section.panel
      %header.panel-heading
        Все страницы
      .panel-body.table-responsive
        %table.table.table-hover
          .col-md-12#pages_pagination{style: 'text-align:center;'}
            = paginate @pages
          %thead
            %tr
              %th #
              %th Страница
              %th В меню/субменю
              %th Тип
              %th.text-center Туров
              %th
          %tbody#pages
            = render 'home_pages/main_page'
            = render 'dashboard/pages/index'